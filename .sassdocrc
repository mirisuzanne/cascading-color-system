theme: herman
dest: docs/
src: sass/

display:
  access:
    - public

groups:
  Getting Started:
    import: Import CSS or Sass
    config: Global Settings
    fallbacks: Fallback Colors & Modes
    modes: Dynamic Modes
    themes: Creating Themes
  'Sass (optional)':
    palettes: Color Palettes
    tools: Additional Tools

herman:
  extraDocs:
    - name: 'Changelog'
      path: CHANGELOG.md
    - name: 'Contributing'
      path: CONTRIBUTING.md
    - name: 'License'
      path: LICENSE.md
  extraLinks:
    - name: 'Demo'
      url: 'https://cascading-colors.netlify.com/'
    - name: 'GitHub Source'
      url: 'https://github.com/oddbird/cascading-color-system'
    - name: 'OddBird'
      url: 'http://oddbird.net/'
  sass:
    implementation: sass
    use:
      - 'sass/ccs'
